%h1 Create new post
= form_for @post do |f|
  .form-group
    = f.label :title
    = f.text_field :title, class: 'form-control'
  .form-group
    = f.label :text
    = f.text_area :content, class: 'form-control', :rows=> "6"
  .form-group
    = text_field_tag :name, '', id: "tags"

  %br
    = f.submit class: 'btn btn-default'
    = link_to "Cancel", posts_path, class: 'btn btn-default'


