%h1 Edit Post

= form_for @post do |f|
  = f.label :title, class: 'col-sm-2 control-label'
  %p= f.text_field :title, class: 'form-control'

  %p= f.label :text, class: 'col-sm-2 control-label'
  = f.text_area :content, class: 'form-control', :rows=> "6"
  %p= text_field_tag :name, class: 'form-control'

  %br
    = f.submit class: 'btn btn-default'
    = link_to "Cancel", posts_path, class: 'btn btn-default'

  %input{name: "tags", id: "tags", value: @tags}